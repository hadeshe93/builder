{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    // 生成声明文件
    // "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": false,
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ES2018", "dom"],
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    // "strict": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "jsx": "preserve",
    // 默认会查找 node_modules/@types 下的，不需要配置白名单
    // "types": ["node", "jest"],
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  }
  // "include": [
  //   // "packages/global.d.ts",
  //   // "packages/*/src",
  //   // "packages/*/__tests__"
  // ]
}
